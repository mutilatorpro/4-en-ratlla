                  <Button fx:id="obscur" mnemonicParsing="false" onAction="#obscBut" styleClass="buttonQuadrat">
                     <graphic>
                        <ImageView fx:id="imgview" fitHeight="38.0" fitWidth="22.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../img/obscur.png" />
